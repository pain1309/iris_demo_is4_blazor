@model CMS.WebApplication.Models.ProductViewModel
@{
    ViewData["Title"] = "Product Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Update Product</h1>
<form method="post" asp-action="Update" asp-controller="ProductManagement">
    <div class="form-group">
        @Html.LabelFor(model => model.Id, "Id of Product")
        @Html.TextBoxFor(model => model.Id, new { @class = "form-control", @type="hidden" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Name, "Name of Product")
        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Description, "Description")
        @Html.TextBoxFor(model => model.Description, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Category, "Category")
        @Html.TextBoxFor(model => model.Category, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Price, "Price")
        @Html.TextBoxFor(model => model.Price, new { @class = "form-control", @type = "number" })
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>